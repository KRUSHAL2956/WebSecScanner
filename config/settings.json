      },
      "thorough": {
        "name": "Thorough Assessment",
        "description": "Deep security investigation", 
        "payloads_per_module": 100,
        "timeout": 15
      }
    },
    "capabilities": {
      "xss": {
        "name": "Cross-Site Scripting (XSS)",
        "level": "Advanced",
        "description": "Comprehensive detection of reflected, stored, and DOM-based XSS vulnerabilities using advanced payload techniques.",
        "features": [
          "80+ specialized payloads",
          "Context-aware detection", 
          "WAF bypass techniques",
          "Filter evasion methods"
        ]
      },
      "sqli": {
        "name": "SQL Injection",
        "level": "Enterprise", 
        "description": "Multi-database SQL injection detection with error-based, boolean-based, and time-based techniques.",
